{
  "name": "vue3-the-mask",
  "version": "1.0.0",
  "description": "Tiny (2KB) and dependency free mask input for Vue.js",
  "main": "dist/vue-the-mask.js",
  "scripts": {
    "size": "size-limit",
    "upgrade:check": "ncu",
    "upgrade:apply": "ncu -u",
    "build": "vite build",
    "docs:build": "vite build --mode docs",
    "docs:serve": "vite preview --mode docs",
    "dev": "vite --mode docs",
    "start": "yarn dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "cypress run",
    "test:e2e:headed": "cypress run --headed",
    "test:e2e:open": "cypress open",
    "test:all": "yarn test && yarn ci",
    "ci": "start-server-and-test dev http://localhost:5173 test:e2e"
  },
  "files": [
    "dist/",
    "src/*.js",
    "src/*.vue"
  ],
  "keywords": [
    "vue",
    "mask"
  ],
  "size-limit": [
    {
      "path": "dist/vue-the-mask.umd.js",
      "limit": "1.55 KB"
    }
  ],
  "author": "Soft4ti",
  "license": "MIT",
  "babel": {
    "env": {
      "test": {
        "presets": [
          "env"
        ]
      },
      "production": {
        "presets": [
          "@vue/app"
        ]
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "last 2 chrome versions"
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/coverage-v8": "4.0.14",
    "@vitest/ui": "^4.0.14",
    "@vue/compiler-sfc": "^3.5.25",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.22",
    "cypress": "^15.7.0",
    "jsdom": "^27.2.0",
    "npm-check-updates": "^19.1.2",
    "size-limit": "^11.2.0",
    "start-server-and-test": "^2.1.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.14",
    "vue": "^3.5.25"
  },
  "dependencies": {}
}
