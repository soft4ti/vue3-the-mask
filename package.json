{
  "name": "vue3-the-mask",
  "version": "1.0.0",
  "description": "Tiny (2KB) and dependency free mask input for Vue.js",
  "main": "dist/vue-the-mask.js",
  "scripts": {
    "size": "size-limit",
    "upgrade:check": "ncu",
    "upgrade:apply": "ncu -u",
    "build": "vue-cli-service build --target lib --name VueTheMask src/index.js && cp dist/VueTheMask.umd.min.js dist/vue-the-mask.js",
    "docs:build": "cd src/docs && vue-cli-service build --dest ../../docs/",
    "docs:serve": "serve ./docs/",
    "start": "yarn dev",
    "test": "cypress run --dev --record false",
    "ci": "start-server-and-test e2e:start-fixture http://localhost:8080 cypress:open",
    "cypress:open": "cypress open",
    "e2e:install-global-dependencies": "yarn global add selenium-standalone@latest && selenium-standalone install",
    "e2e:start-fixture": "vue-cli-service serve ./test/fixture.vue",
    "e2e:start-selenium": "selenium-standalone start",
    "e2e:run": "nightwatch ./test/nightwatch.js",
    "dev": "cd src/docs && vue-cli-service serve"
  },
  "files": [
    "dist/",
    "src/*.js",
    "src/*.vue"
  ],
  "keywords": [
    "vue",
    "mask"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/@vue/vue3-jest"
    }
  },
  "size-limit": [
    {
      "path": "dist/vue-the-mask.js",
      "limit": "1.55 KB"
    }
  ],
  "author": "Soft4ti",
  "license": "MIT",
  "babel": {
    "env": {
      "test": {
        "presets": [
          "env"
        ]
      },
      "production": {
        "presets": [
          "@vue/app"
        ]
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "last 2 chrome versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@vue/cli": "^5.0.9",
    "@vue/cli-plugin-babel": "^5.0.9",
    "@vue/cli-service": "^5.0.9",
    "@vue/compiler-sfc": "^3.5.24",
    "@vue/test-utils": "^2.4.6",
    "@vue/vue3-jest": "^29.2.6",
    "babel-jest": "^30.2.0",
    "cypress": "^15.7.0",
    "jest": "^30.2.0",
    "jest-serializer-vue": "^3.1.0",
    "nightwatch": "^3.12.3",
    "npm-check-updates": "^19.1.2",
    "puppeteer": "^24.31.0",
    "serve": "^14.2.5",
    "size-limit": "^11.2.0",
    "start-server-and-test": "^2.1.3",
    "testcafe": "^3.7.2",
    "vue": "^3.5.24",
    "vue-loader": "^17.4.2",
    "webpack": "^5.103.0"
  },
  "dependencies": {}
}
