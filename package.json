{
  "name": "vue3-the-mask",
  "version": "1.0.0",
  "description": "Tiny (2KB) and dependency free mask input for Vue.js",
  "main": "dist/vue-the-mask.js",
  "scripts": {
    "size": "size-limit",
    "upgrade:check": "ncu",
    "upgrade:apply": "ncu -u",
    "build": "vite build",
    "docs:build": "vite build --mode docs",
    "docs:serve": "vite preview --mode docs",
    "start": "yarn dev",
    "test": "cypress run --dev --record false",
    "ci": "start-server-and-test e2e:start-fixture http://localhost:8080 cypress:open",
    "cypress:open": "cypress open",
    "e2e:install-global-dependencies": "yarn global add selenium-standalone@latest && selenium-standalone install",
    "e2e:start-fixture": "vite --root test",
    "e2e:start-selenium": "selenium-standalone start",
    "e2e:run": "nightwatch ./test/nightwatch.js",
    "dev": "vite --mode docs"
  },
  "files": [
    "dist/",
    "src/*.js",
    "src/*.vue"
  ],
  "keywords": [
    "vue",
    "mask"
  ],
  "size-limit": [
    {
      "path": "dist/vue-the-mask.umd.js",
      "limit": "1.55 KB"
    }
  ],
  "author": "Soft4ti",
  "license": "MIT",
  "babel": {
    "env": {
      "test": {
        "presets": [
          "env"
        ]
      },
      "production": {
        "presets": [
          "@vue/app"
        ]
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "last 2 chrome versions"
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/compiler-sfc": "^3.5.25",
    "autoprefixer": "^10.4.22",
    "cypress": "^15.7.0",
    "npm-check-updates": "^19.1.2",
    "size-limit": "^11.2.0",
    "start-server-and-test": "^2.1.3",
    "vite": "^7.2.4",
    "vue": "^3.5.25"
  },
  "dependencies": {}
}